extends ../layout.pug

block content
	h2 Formulario inserción producto
	form(method="POST", action="/productos/update")
		.form-group
			label Nombre del producto
			input.form-control(type="text", name="nombre", required, value=producto.nombre)
		.form-group
			label Precio
			input.form-control(type="text", name="precio", required, value=producto.precio)
		.form-group
			label Descripción
			textarea.form-control(name="descripcion", rows="5", required) #{producto.descripcion}
		.form-group
			label Departamento
			select#miselect.form-control(name="departamento", required)
				option(value="electrodomesticos") Electrodomésticos
				option(value="informatica") Informática
				option(value="hogar") Hogar
				option(value="fotografia") Fotografía
		input.form-control(type="hidden", name="_id", required, value=producto._id)
		input.btn.btn-info.btn-block(type="submit", value="Enviar")

	script.
		var pOptions = document.getElementById('miselect').options;
		for (i=0; i < pOptions.length; i++) {
			if (pOptions[i].value == "#{producto.departamento}") 			pOptions[i].selected = true;
			}